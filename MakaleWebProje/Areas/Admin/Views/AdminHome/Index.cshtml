@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Genel Stil */
    body {
        background-color: #2c2c2c; /* Koyu Gri Arka Plan */
        color: #ffffff; /* Beyaz Yazılar */
    }

    .alert-info {
        background-color: #444444; /* Daha Koyu Gri Uyarı Kutusu */
        border: 1px solid #555555;
        color: #ffffff;
    }

    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
    }

        .card.bg-primary {
            background-color: #1e3a8a; /* Koyu Mavi */
        }

        .card.bg-success {
            background-color: #166534; /* Koyu Yeşil */
        }

        .card.bg-warning {
            background-color: #b45309; /* Koyu Turuncu */
        }

        .card.bg-danger {
            background-color: #b91c1c; /* Koyu Kırmızı */
        }

        .card .card-body {
            padding: 20px;
        }

        .card h5 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 1rem;
            margin: 0;
        }
</style>

<div class="alert alert-info">
    <strong>Hoş geldiniz!</strong> Yönetim paneline erişim sağladınız.
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-warning text-white shadow-sm">
            <div class="card-body">
                <h5><i class="fas fa-users"></i> Kullanıcılar</h5>
                <p>Toplam: <strong>11</strong></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white shadow-sm">
            <div class="card-body">
                <h5><i class="fas fa-newspaper"></i> Makaleler</h5>
                <p>Toplam: <strong>10</strong></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow-sm">
            <div class="card-body">
                <h5><i class="fas fa-thumbs-up"></i> Beğeniler</h5>
                <p>Toplam: <strong>13</strong></p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white shadow-sm">
            <div class="card-body">
                <h5><i class="fas fa-thumbs-down"></i> Beğenilmeyenler</h5>
                <p>Toplam: <strong>12</strong></p>
            </div>
        </div>
    </div>
</div>

<!-- Grafik Alanı -->
<div class="mt-5">
    <canvas id="myChart" width="400" height="150"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Kullanıcılar', 'Makaleler', 'Beğeniler', 'Beğenilmeyenler'],
            datasets: [{
                label: 'Toplam Sayılar',
                data: [11, 10, 13, 12], // Verileri buraya ekleyin
                backgroundColor: [
                    '#b45309', // Koyu Turuncu
                    '#1e3a8a', // Koyu Mavi
                    '#166534', // Koyu Yeşil
                    '#b91c1c'  // Koyu Kırmızı
                ],
                borderColor: [
                    '#b45309',
                    '#1e3a8a',
                    '#166534',
                    '#b91c1c'
                ],
                borderWidth: 1
            }]
        },
        options: {
            plugins: {
                legend: {
                    labels: {
                        color: '#ffffff' // Etiket rengi
                    }
                }
            },
            scales: {
                x: {
                    ticks: {
                        color: '#ffffff' // X ekseni yazı rengi
                    },
                    grid: {
                        color: '#ffffff' // Dikey çizgi rengi
                    }
                },
                y: {
                    beginAtZero: true,
                    ticks: {
                        color: '#ffffff' // Y ekseni yazı rengi
                    },
                    grid: {
                        color: '#ffffff' // Yatay çizgi rengi
                    }
                }
            }
        }
    });
</script>