@using MakaleWebProje.Areas.Admin.Helpers
@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .stats-icon {
        font-size: 2rem;
        margin-bottom: 10px;
    }

    .stats-title {
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    .stats-number {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>

<div class="container-fluid">
    <!-- Başlık ve Hoşgeldin Mesajı -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            @Html.Raw("<i class='fas fa-tachometer-alt'></i>") @* HTML Helper Kullanımı *@
            Dashboard
        </h1>
        <div class="alert alert-info py-2 mb-0">
            @Html.ActionLink("Yönetim Paneli", "Index", "AdminHome", null, new { @class = "alert-link" }) @* HTML Helper Kullanımı *@
            'ne hoş geldiniz!
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row">
        <!-- Kullanıcılar Kartı (Custom HTML Helper) -->
        <div class="col-xl-3 col-md-6">
            @Html.StatisticsCard("Kullanıcılar", (int)ViewBag.UserCount, "fas fa-users", "bg-primary")
        </div>

        <!-- 1. Standart HTML Helper Kullanımı -->
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="stats-icon">
                        @Html.Raw("<i class='fas fa-newspaper'></i>")
                    </div>
                    <div class="stats-title">Makaleler</div>
                    <div class="stats-number">
                        <h5>
                            Toplam: <strong>@ViewBag.MakaleCount</strong>
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <!-- Yorumlar Kartı (Custom Tag Helper) -->
        <div class="col-xl-3 col-md-6">
            <statistics title="Yorumlar"
                        count="@ViewBag.CommentCount"
                        icon="fas fa-comments"
                        background-color="bg-warning">
            </statistics>
        </div>


    <!-- Grafik -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chart-bar"></i> İstatistik Grafiği
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="myChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

 
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Kullanıcılar', 'Makaleler', 'Yorumlar',],
                datasets: [{
                    label: 'Site İstatistikleri',
                    data: [
        @ViewBag.UserCount,
        @ViewBag.MakaleCount,
        @ViewBag.CommentCount,
        @(ViewBag.MakaleCount * 10)
                            ],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(23, 162, 184, 0.8)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}