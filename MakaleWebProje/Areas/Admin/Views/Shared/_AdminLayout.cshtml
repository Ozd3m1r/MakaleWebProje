<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link {
            padding: 10px 15px;
            margin: 5px 0;
            border-radius: 5px;
            transition: all 0.3s;
        }

        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .nav-link i {
            margin-right: 10px;
        }

        .admin-header {
            padding: 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            margin-bottom: 20px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3 sidebar" style="width: 250px;">
            <div class="admin-header">
                <h3 class="mb-0">Admin Panel</h3>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Makale" asp-action="Index">
                        <i class="bi bi-file-text"></i> Makaleler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Makale" asp-action="Create">
                        <i class="bi bi-plus-circle"></i> Yeni Makale
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Kategori" asp-action="Index">
                        <i class="bi bi-tags"></i> Kategoriler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="Admin" asp-controller="Users" asp-action="Index">
                        <i class="bi bi-people"></i> Kullanıcılar
                    </a>
                </li>
                
                <li class="nav-item mt-4">
                    <a class="nav-link text-white" href="/">
                        <i class="bi bi-house"></i> Siteye Dön
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link text-white" href="/User/Logout">
                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content flex-grow-1">
            <div class="container-fluid">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>