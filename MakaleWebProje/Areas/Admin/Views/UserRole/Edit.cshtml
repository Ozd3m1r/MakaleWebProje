@model Entities.Models.UserRole

@{
    ViewData["Title"] = "Rol Düzenle";
}

<h2>Rol Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserRoleId" />
    <div class="form-group">
        <label asp-for="UserRoleName" class="control-label"></label>
        <input asp-for="UserRoleName" class="form-control" />
        <span asp-validation-for="UserRoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>