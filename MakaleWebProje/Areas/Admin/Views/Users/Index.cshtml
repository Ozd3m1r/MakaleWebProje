@model IEnumerable<Entities.Models.Users>

<style>
    /* Mevcut stiller... */
</style>

<div class="container-fluid">
    <h2 class="my-4">Kullanıcı Yönetimi</h2>

    <!-- Admin Kullanıcılar Tablosu -->
    <h3 class="text-white">Admin Kullanıcılar</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>Rol</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => u.UserRoleId == 2))
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>Admin</td>
                    <td>
                        <div class="btn-group" role="group">
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                            
                            <a href="@Url.Action("Update", new { id = user.UserId })" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- User Kullanıcılar Tablosu -->
    <h3 class="text-white">User Kullanıcılar</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Kullanıcı Adı</th>
                <th>Rol</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => u.UserRoleId == 1))
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>User</td>
                    <td>
                        <div class="btn-group" role="group">
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@user.UserId" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    <i class="bi bi-trash"></i> Sil
                                </button>
                            </form>
                            <a href="@Url.Action("Update", new { id = user.UserId })" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

