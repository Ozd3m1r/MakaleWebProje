@model UserDtoUpdate
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
}

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Kullanıcı Güncelle</h3>
        <a href="@Url.Action("Index")" class="btn btn-light">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Ad</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SurName" class="form-label">Soyad</label>
                        <input asp-for="SurName" class="form-control" />
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" readonly />
                        <small class="text-muted">Kullanıcı adı değiştirilemez</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <!-- Şifreyi gizli tutuyoruz, ancak ModelState geçerliliğini bozmamak için bu alanda bir değer taşıyoruz -->
                        <input asp-for="Password" type="hidden" value="@Model.Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UserRoleId" class="form-label">Kullanıcı Rolü</label>
                        <select asp-for="UserRoleId" class="form-select">
                            <option value="">Rol Seçiniz</option>
                            @foreach (var role in ViewBag.Roles)
                            {
                                <option value="@role.UserRoleId">@role.UserRoleName</option>
                            }
                        </select>
                        <span asp-validation-for="UserRoleId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Güncelle
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 