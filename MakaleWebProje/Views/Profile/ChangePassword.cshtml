@model ChangePasswordDto
@{
    ViewData["Title"] = "Şifre Değiştirme";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Şifre Değiştirme</h3>
            <a href="@Url.Action("ProfileDetails", "Profile")" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Profilime Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="ChangePassword" method="post" id="changePasswordForm" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">Mevcut Şifre</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Yeni Şifreyi Onayla</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Şifreyi Değiştir
                    </button>
                    <a href="@Url.Action("ProfileDetails", "Profile")" class="btn btn-secondary">
                        <i class="bi bi-x"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('changePasswordForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Şifre kontrolü
            const newPassword = document.querySelector('[name="NewPassword"]').value;
            const confirmPassword = document.querySelector('[name="ConfirmPassword"]').value;
            const currentPassword = document.querySelector('[name="CurrentPassword"]').value;

            if (!currentPassword || !newPassword || !confirmPassword) {
                Swal.fire({
                    title: 'Uyarı!',
                    text: 'Lütfen tüm alanları doldurun.',
                    icon: 'warning',
                    confirmButtonText: 'Tamam',
                    confirmButtonColor: '#3085d6'
                });
                return;
            }

            if (newPassword !== confirmPassword) {
                Swal.fire({
                    title: 'Hata!',
                    text: 'Yeni şifreler eşleşmiyor!',
                    icon: 'error',
                    confirmButtonText: 'Tamam',
                    confirmButtonColor: '#d33'
                });
                return;
            }

            // Loading göster
            Swal.fire({
                title: 'Lütfen Bekleyin',
                text: 'Şifreniz güncelleniyor...',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Form verilerini topla
            var formData = new FormData(this);

            // AJAX ile form gönderimi
            fetch(this.action, {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: 'Başarılı!',
                            text: data.message || 'Şifreniz başarıyla güncellendi.',
                            icon: 'success',
                            confirmButtonText: 'Tamam',
                            confirmButtonColor: '#28a745'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Profile/ProfileDetails';
                            }
                        });
                    } else {
                        Swal.fire({
                            title: 'Hata!',
                            text: data.message,
                            icon: 'error',
                            confirmButtonText: 'Tamam',
                            confirmButtonColor: '#d33'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Hata!',
                        text: 'Bir hata oluştu. Lütfen tekrar deneyin.',
                        icon: 'error',
                        confirmButtonText: 'Tamam',
                        confirmButtonColor: '#d33'
                    });
                });
        });

        // Validation mesajlarını göster
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('input', function () {
                const errorSpan = this.nextElementSibling;
                if (errorSpan && errorSpan.classList.contains('text-danger')) {
                    errorSpan.textContent = '';
                }
            });
        });
    </script>
}