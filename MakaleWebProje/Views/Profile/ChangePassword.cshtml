@model ChangePasswordDto
@{
    ViewData["Title"] = "Şifre Değiştirme";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Şifre Değiştirme</h3>
            <a href="@Url.Action("ProfileDetails", "Profile")" class="btn btn-light">
                <i class="bi bi-arrow-left"></i> Profilime Dön
            </a>
        </div>
        <div class="card-body">
            <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">Mevcut Şifre</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Yeni Şifreyi Onayla</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Şifreyi Değiştir
                    </button>
                    <a href="@Url.Action("ProfileDetails", "Profile")" class="btn btn-secondary">
                        <i class="bi bi-x"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
