@using System.Security.Claims
@model Entities.Models.Users
@{
    ViewData["Title"] = "Profil Detayları";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Profil Detayları</h3>
            @if (@ViewBag.UserRole=="Admin")
            {
                <a href="@Url.Action("Index", "AdminHome", new { area = "Admin" })" class="btn btn-light">
                    <i class="bi bi-gear"></i> Admin Panel
                </a>
            }
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="text-muted">Ad</label>
                        <p class="h5">@Model.Name</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Soyad</label>
                        <p class="h5">@Model.SurName</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="text-muted">Email</label>
                        <p class="h5">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Kullanıcı Adı</label>
                        <p class="h5">@Model.UserName</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted">Rol</label>
                        <p class="h5">@ViewBag.UserRole</p>
                    </div>
                </div>
            </div>
             <div class="d-flex gap-2 flex-wrap">
                <a asp-action="Update" asp-route-id="@Model.UserId" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Profili Güncelle
                </a>
                <a asp-action="ChangePassword" asp-route-id="@Model.UserId" class="btn btn-info">
                    <i class="bi bi-key"></i> Şifre Değiştir
                </a>

              
                <form asp-action="Delete" method="post" class="d-inline" 
                      onsubmit="return confirm('Hesabınızı silmek istediğinize emin misiniz?');">
                    <input type="hidden" name="id" value="@Model.UserId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Hesabı Sil
                    </button>
                </form>
                <a asp-action="Logout" class="btn btn-secondary">
                    <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                </a>
            </div>
