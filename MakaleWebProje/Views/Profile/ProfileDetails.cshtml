@model Entities.Models.Users

<h2>Profil Detayları</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Ad:</strong> @Model.Name</p>
        <p><strong>Soyad:</strong> @Model.SurName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Update" asp-route-id="@Model.UserId" class="btn btn-warning">Profili Güncelle</a>
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" name="id" value="@Model.UserId" />
        <button type="submit" class="btn btn-danger">Profili Sil</button>
    </form>
    <a asp-action="Logout" class="btn btn-secondary mt-3">Çıkış Yap</a>
</div>
