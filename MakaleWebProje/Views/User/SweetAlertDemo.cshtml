<div class="container mt-4">
    <h2>SweetAlert2 Demo</h2>
    
    <div class="row mt-3">
        <div class="col-md-3">
            <button class="btn btn-success" onclick="showSuccessAlert()">Başarılı Alert</button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-danger" onclick="showErrorAlert()">Hata Alert</button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-warning" onclick="showConfirmAlert()">Onay Alert</button>
        </div>
        <div class="col-md-3">
            <button class="btn btn-info" onclick="showCustomAlert()">Özel Alert</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Başarılı mesaj
        function showSuccessAlert() {
            Swal.fire({
                title: 'Başarılı!',
                text: 'İşlem başarıyla tamamlandı.',
                icon: 'success',
                confirmButtonText: 'Tamam'
            });
        }

        // Hata mesajı
        function showErrorAlert() {
            Swal.fire({
                title: 'Hata!',
                text: 'Bir hata oluştu.',
                icon: 'error',
                confirmButtonText: 'Tamam'
            });
        }

        // Onay mesajı
        function showConfirmAlert() {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu işlemi geri alamazsınız!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Silindi!',
                        'Kayıt başarıyla silindi.',
                        'success'
                    );
                }
            });
        }

        // Özel alert
        function showCustomAlert() {
            Swal.fire({
                title: 'Özel Alert',
                html: '<div class="alert alert-info">Bu bir <strong>özel</strong> alert!</div>',
                icon: 'info',
                showCloseButton: true,
                showCancelButton: true,
                focusConfirm: false,
                confirmButtonText: 'Harika!',
                cancelButtonText: 'İptal',
                timer: 5000,
                timerProgressBar: true
            });
        }

        // Sayfa yüklendiğinde otomatik alert
        $(document).ready(function() {
            Swal.fire({
                title: 'Hoş Geldiniz!',
                text: 'SweetAlert2 Demo sayfasına hoş geldiniz.',
                icon: 'info',
                timer: 2000,
                timerProgressBar: true,
                showConfirmButton: false
            });
        });
    </script>
}
