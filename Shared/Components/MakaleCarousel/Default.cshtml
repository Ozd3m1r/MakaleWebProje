@model IEnumerable<Makale>

<div class="container mt-5 animate__animated animate__slideInLeft">
    @if (Model.Any())
    {
        <div id="carouselExample" class="carousel slide mb-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                @foreach (var mak in Model.Select((value, i) => new { value, i }))
                {
                    <div class="carousel-item @(mak.i == 0 ? "active" : "")">
                        <div class="d-flex justify-content-center align-items-center" style="height: 400px; background-color: #f8f9fa; border-radius: 10px;">
                            <div class="text-center">
                                <img src="@mak.value.MakaleImagesUrl" class="card-img-top" alt="@mak.value.MakaleName"
                                     style="height: 200px; object-fit: cover;">
                                <h5>@mak.value.MakaleName</h5>
                                <p>@mak.value.MakaleSummary</p>
                                <a href="@Url.Action("Get", "Makale", new { id = mak.value.MakaleId })" class="btn btn-primary mt-3">
                                    <i class="bi bi-book-half"></i> Detayları Gör
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Kontroller -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Önceki</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sonraki</span>
            </button>
        </div>
    }
</div>

<style>
    .carousel-item {
        transition: transform 0.6s ease-in-out;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 5%;
        background-color: rgba(0,0,0,0.2);
        border-radius: 50%;
        height: 50px;
        top: 50%;
        transform: translateY(-50%);
    }

    .carousel-control-prev {
        left: 20px;
    }

    .carousel-control-next {
        right: 20px;
    }
</style> 